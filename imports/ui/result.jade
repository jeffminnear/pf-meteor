template(name="resultEntry")
  div.row(class="result")
    p.result-title(class="col s8 m3 l3 offset-s2")
      | #{ entry.simplifiedTitle }
    if (entry.normalPrice)
      div.prices(class="col s8 m3 l3 offset-s2")
        p.result-normal-price
          | #{ entry.normalPrice }
        p.result-sale-price
          | #{ entry.price }
    else
      p.result-price(class="col s8 m3 l3 offset-s2")
        | #{ entry.price }
    p.result-store(class="col s8 m3 l3 offset-s2")
      | #{ entry.store }
    img.result-thumbnail(class="col s8 m3 l3 offset-s2" src="#{ entry.imageURL }")
  div.divider
